{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "es6",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react-native",
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "android",
    "build",
    "config",
    "index.android.js",
    "index.ios.js",
    "ios",
    "node_modules"
  ],
  "compileOnSave": true
}
